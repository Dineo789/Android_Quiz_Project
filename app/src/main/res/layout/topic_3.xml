<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dineo.quizz.Topic_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text"
        android:text="Question"
        android:fontFamily="monospace"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <ImageButton
        android:id="@+id/undo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_undo"
        android:onClick="undo"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/txt1"
        android:textColor="@color/text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        />
    <TextView
        android:id="@+id/sxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="None"
        android:layout_below="@id/txt2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/sxt1"
        android:weightSum="4">
        <TextView
            android:id="@+id/optA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:text="Option 1"
            android:fontFamily="monospace"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:onClick="OptionSelected"
            android:background="@color/options"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/optB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/optA"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:text="Option 2"
            android:fontFamily="monospace"
            android:layout_weight="1"
            android:background="@color/options"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:onClick="OptionSelected"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/optC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/optB"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="OptionSelected"
            android:padding="16dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Option 3"
            android:fontFamily="monospace"
            android:layout_weight="1"
            android:background="@color/options"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="20dp"
            android:layout_weight="0.4"
            android:textStyle="bold"
            android:onClick="onClick"
            android:background="@drawable/options_style"
            android:text="Next Question" />
    </LinearLayout>

</RelativeLayout>